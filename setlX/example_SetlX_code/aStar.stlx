// this program demonstrates how straight forward implementing A* can be

/* algorithm */
var h, transition;

aStar := procedure(s, t) {
    g := predecessor := f := {};

    g[s]        := 0;
    f[s]        := h[s];
    openQueue   := { [f[s], s] };

    while(openQueue != {}) {
        [fx, x] := fromB(openQueue);
        if (x in t) {
            printPath(s, t, x, fx, predecessor);
            return;
        }
        for ( [y, yCost] in transition{x} ) {
            if (g[y] == om || g[x] + yCost < g[y]) {
                predecessor[y]  := x;
                g[y]            := g[x] + yCost;
                openQueue       -= { [f[y], y] };
                f[y]            := g[y] + h[y];
                openQueue       += { [f[y], y] };
            }
        }
    }
    print("path $s$ -> $t$: no solution");
};

