class stateOfTests() {
    static {
        testNumber := 0;
        testsOK    := 0;
    }
}

tester := procedure(boolean, name) {
    stateOfTests.testNumber += 1;

    if (boolean) {
        stateOfTests.testsOK += 1;
        print("test $stateOfTests.testNumber$ successful ($name$)");
    } else {
        print("test $stateOfTests.testNumber$ failed ($name$)");
    }

    return boolean;
};

